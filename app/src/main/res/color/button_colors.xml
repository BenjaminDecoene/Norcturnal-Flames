<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color when the button is pressed -->
    <item android:state_pressed="true" android:color="@color/btn_primary" />

    <!-- Color when the button is disabled -->
    <item android:state_enabled="false" android:color="@color/btn_secondary" />

    <!-- Default color -->
    <item android:color="@color/btn_primary" />
</selector>
